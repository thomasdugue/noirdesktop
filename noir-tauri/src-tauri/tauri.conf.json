{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Noir",
  "version": "0.1.0",
  "identifier": "com.tdugue.noir",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Noir",
        "width": 1200,
        "height": 800,
        "minWidth": 320,
        "minHeight": 400,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: noir: asset: https://tauri.localhost; img-src 'self' data: blob: noir: asset: https://tauri.localhost https://*.deezer.com https://*.scdn.co https://*.wikimedia.org",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/tdugue/noir-desktop/releases/latest/download/latest.json"
      ],
      "pubkey": "PLACEHOLDER_PUBKEY_GENERATE_WITH_tauri_signer_generate"
    }
  }
}
